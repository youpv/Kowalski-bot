{
  "name": "kowalski-analysis-bot",
  "version": "1.0.0",
  "description": "A Twitter bot that responds as Kowalski from Madagascar when tagged for analysis",
  "main": "dist/index.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "bot-run": "node dist/bot-runner.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "ts-node src/test.ts",
    "test-twitter": "ts-node src/twitter-test.ts"
  },
  "keywords": [
    "twitter",
    "bot",
    "kowalski",
    "madagascar",
    "ai",
    "github-actions"
  ],
  "author": "Youp Verkooijen",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.9.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "twitter-api-v2": "^1.15.1"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
